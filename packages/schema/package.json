{
  "name": "@talesoft/schema",
  "version": "0.1.2",
  "license": "MIT",
  "main": "cjs/index.js",
  "types": "esm/index.d.ts",
  "scripts": {
    "build": "tsc && babel src --out-dir cjs --extensions .ts,.tsx --delete-dir-on-start",
    "test": "jest --passWithNoTests",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "docs:build": "typedoc --categorizeByGroup --out docs src/index.ts",
    "docs:serve": "typedoc --categorizeByGroup --out docs src/index.ts && serve docs"
  },
  "devDependencies": {
    "@talesoft/equals": "^0.1.2",
    "@talesoft/json-pointer": "^0.1.2",
    "@talesoft/types": "^0.1.2",
    "@talesoft/uri": "^0.1.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.2",
    "serve": "^12.0.0",
    "ts-jest": "^26.5.0",
    "typedoc": "^0.21.9",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
